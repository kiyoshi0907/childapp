<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media border postcolor">
        <% if user.image? %>
          <a href="<%= user_path(user.id) %>"><%= image_tag user.image.thumb50.to_s,
                      class:"rounded-circle posticon mt-2 mr-2 ml-2 mb-2"%></a>
        <% else %>
          <a href="<%= user_path(user.id) %>"><%= image_tag("default.jpg", :size => "50x50", class:"rounded-circle posticon mt-2 mr-2 ml-2 mb-2")%></a>
        <%  end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <ul class="nav">
            <li class="nav-item mr-5"><%= link_to 'View profile', user_path(user) %></li>
            <li class="nav-item"><%= render 'relationships/follow_button', user: user %></li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>